def Q1():
    f = open('abc.txt',"r")
    s = f.read()
    dem=0
    arr = s.split('\n')
    for i in arr:
        for j in i:
            dem+=1
    print('Total words:',dem)    
def display_words():
    f = open('abc.txt',"r")
    s = f.read()
    arr = s.split(' ')
    for i in arr:
        if len(i)<=4:
            print(i,end=' ')
